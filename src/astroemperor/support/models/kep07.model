    E = kepler.solve(M, np.repeat(ecc, len(M)))
    f = np.arctan(((1. + ecc)/(1. - ecc)) ** 0.5 * np.tan(E / 2.)) * 2.
    model0 += A * (np.cos(f + w) + ecc * np.cos(w))
